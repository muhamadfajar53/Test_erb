<%= render 'shared/navigation' %>

<div class="container">
  <div class="row">
    <h1 class="text-center"><%= pluralize(@book.count, "Result" )%></h1>
    <p>
    <table class="table table-bordered table-hover table-responsive">
      <thead>
        <tr>
          <th> <strong>judul Buku</strong> </th>
          <th> <strong>Nama Pengarang</strong> </th>
          <th> <strong>Penerbit</strong> </th>
          <th> <strong>Tahun Terbit</strong> </th>
          <th class="text-center">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.judulBuku %></td>
            <td><%= book.namaPengarang %></td>
            <td><%= book.penerbit %></td>
            <td><%= book.tahunTerbit %></td>
            <td class="text-center">
              <%= link_to 'Edit', edit_book_path(book), class: 'btn btn-success' %>
              <%= link_to 'Delete', books_path(book), method: :delete, data: {confirm: 'Data Dihapus ? '}, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-grid gap-2 d-md-block">
      <%= link_to 'Tambah Data Library  ', new_book_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>